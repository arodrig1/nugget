extends layout

block content
  h1 NUGGET

  div.description
    p. Tell your parents the highlights of your day in less than 2 min!

  div#waiting
  div#webcam_stream
  div#video_container

  div#recordbar

  button(id="start", data-action="bea").
    Start
  button(id="stop", data-action="bea").
    Stop
  button(id="clear", data-action="bea").
    Clear

  form(action='/nuggets/send', method='post')
    input(type="hidden" id="nugget_id_input")
    input(type="email" name="email")
    input(type="submit" value="Send" id="send", data-action="bea")

  script(src='/javascript/nuggetRecord.js')

