extends layout

block content  
  div.navbar.navbar-inverse.navbar-static-top(role="navigation")
    div.container
      div.navbar-header
        a.navbar-brand.nugget-title(href="#"). Nugget
      div.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li

  div#webcam_stream
    div#spinner.spinner
      img(src="/images/ajax-loader.gif" alt="Loading...")
  
  div#audio_container

  button.btn.btn-primary(id="play")
    span.glyphicon.glyphicon-play
    |  Play
  button.btn.btn-primary(id="pause")
    span.glyphicon.glyphicon-pause
    |  Pause
  button.btn.btn-primary(id="stop")
    span.glyphicon.glyphicon-stop
    |  Stop

  script(src='/javascript/responsePlayback.js')

